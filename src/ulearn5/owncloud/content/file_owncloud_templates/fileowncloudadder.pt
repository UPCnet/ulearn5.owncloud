<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ulearn5.owncloud">
<body>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <script type="text/javascript" tal:attributes="src string:$portal_url/++ulearn++owncloud/dropzone.js"></script>
        <script type="text/javascript" tal:content="string: UPLOAD_URL = '${context/absolute_url}/upload-file'" />
        <link rel="stylesheet" tal:attributes="href string:$portal_url/++ulearn++owncloud/dropzone.css" />

        <div>
          <legend i18n:translate="title_create_new_file">Create a new file</legend>
          <div class="help" i18n:translate="help_create_new_file">
              Click in the image to create a document, spreadsheet or presentation.
          </div>

          <div tal:define="CREATE_NEW_FILE_URL string:${context/absolute_url}/create-file">

            <a title="Create Document" aria-label="Create Document" data-filetype="x-office-document" aria-hidden="true" tal:attributes="href string:${context/absolute_url}/create-file" style="font-size:48px;color:#007BC0">
                        <i class="fa fa-file-text-o icons" s></i>
            </a>

            <a title="Create Spreadsheet" aria-label="Create Spreadsheet" data-filetype="x-office-spreadsheet" aria-hidden="true" href="http://pc47194.estacions.upcnet.es/testnctancada/documents" style="font-size:48px;color:#9abd4e">
                <i class="fa fa-file-excel-o icons"></i>
            </a>

            <a title="Create Presentation" aria-label="Create Presentation" data-filetype="x-office-presentation" aria-hidden="true" href="http://pc47194.estacions.upcnet.es/testnctancada/documents" style="font-size:48px;color:#F0965F">
                <i class="fa fa-file-powerpoint-o icons" s></i>
            </a>

            <form tal:attributes="action CREATE_NEW_FILE_URL" id="new_file">
              <div class="fallback">
                <input type="radio" name="type" value="odt" checked> Document<br>
                <input type="radio" name="type" value="ods"> Spreadsheet<br>
                <input type="radio" name="type" value="odp"> Presentation <br>
                <input name="file" type="text" />
              </div>
            </form>
            <button type="submit" form="new_file" value="Submit">Submit</button>
          </div>

        </div>

        <br>

        <div id="zip-form"
            tal:define="UPLOAD_URL string:${context/absolute_url}/upload-file">

          <!-- uploadify -->
          <fieldset id="uploadify">
              <legend i18n:translate="title_uploading_files">Multi/single file upload</legend>
              <div class="help" i18n:translate="help_uploading_files">
                  Use this form for uploading a single or multiple files.
              </div>

              <form tal:attributes="action UPLOAD_URL" class="dropzone" id="dropzone" init="foo">
                <div class="dz-message" i18n:translate="click_to_upload">Drop file here or click to upload</div>
                <div class="fallback">
                    <input name="file" type="file" multiple />
                </div>
                <input type="hidden" name="subpath" tal:attributes="value request/subpath | nothing" />
              </form>
              <div id="upload-message"></div>
          </fieldset>
        </div>

        <div style="clear: both"></div>

        <div class="actions">
            <a tal:attributes="href string:${context/absolute_url}/${request/subpath|nothing}" i18n:translate="back_to_directory">Back to file/directory listing</a>
        </div>

        <script type="text/javascript">
            Dropzone.autoDiscover = false;
            $(document).ready(function() {

                $("#dropzone").dropzone({
                    url: UPLOAD_URL,
                    maxFilesize: 50,
                    addRemoveLinks: false,
                    parallelUploads: 1
                });
            });
        </script>

  </metal:content-core>
</metal:main>

</body>
</html>

